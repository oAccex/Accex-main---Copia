<main>
    <h1>Adicionar Acesso(s)</h1>
    <form class="Acessos">
        <fieldset>
            <legend>Este local possui andares?</legend>
            <div><input type="radio" name="andares" id="SimAnd" value="Possui andares"><label for="SimAnd">Sim</label></div>
            <div><input type="radio" name="andares" id="NaoAnd" value="Não possui andares"><label for="NaoAnd">   Não</label></div>
        </fieldset>
        <fieldset>
            <legend>Este local escada(s) rolante?</legend>
            <div><input type="radio" name="escada" id="SimEsc" value="Possui escada rolante"><label for="SimEsc">Sim</label></div>
            <div><input type="radio" name="escada" id="NaoEsc" value="Não possui escada rolante"><label for="NaoEsc">Não</label></div>
        </fieldset>
        <fieldset>
            <legend>Este local possui elevador(es)?</legend>
            <div><input type="radio" name="elevadores" id="SimEle" value="Possui elevadores"><label for="SimEle">Sim</label></div>
            <div><input type="radio" name="elevadores" id="NaoEle" value="Não possui elevadores"><label for="NaoEle">Não</label></div>
        </fieldset>
        <fieldset>
            <legend>Este local possui rampa(s) de acesso?</legend>
            <div><input type="radio" name="rampa" id="SimRam" value="Possui rampa de acesso"><label for="SimRam">Sim</label></div>
            <div><input type="radio" name="rampa" id="NaoRam" value="Não possui rampa de acesso"><label for="NaoRam">Não</label></div>
        </fieldset>
        <fieldset>
            <legend>Este local possui piso tátil?</legend>
            <div><input type="radio" name="piso" id="SimPiso" value="Possui piso tátil"><label for="SimPiso">Sim</label></div>
            <div><input type="radio" name="piso" id="NaoPiso" value="Não possui piso tátil"><label for="NaoAnd">Não</label></div>
        </fieldset>
        <button id="butcad">
          <a href="/localDesc">Finalizar</a>
        </button>
    </form>
